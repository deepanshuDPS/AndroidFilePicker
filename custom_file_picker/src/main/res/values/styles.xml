<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary" >@color/colorOnSecondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionMenuTextColor">@color/colorOnSecondary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_back</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/CustomActionModeTextStyle</item>
    </style>

    <style name="CustomActionModeTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>